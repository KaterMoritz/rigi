<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@android:style/Theme.Translucent"
    android:background="@color/colorTransparent">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <PreferenceCategory
        android:title="Fahrplan"
        android:textSize="48dp"
        android:textColor="@android:color/white">

    <EditTextPreference
        android:inputType="text"
        android:key="transport_api_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Transport API key" />

    <EditTextPreference
        android:inputType="text"
        android:key="from_location"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:defaultValue=""
        android:title="From location" />

    <EditTextPreference
        android:inputType="text"
        android:key="to_location"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:defaultValue=""
        android:title="To location" />

    <Preference
        android:title="Info"
        android:key="transport_req_cnt"
        android:summary="-"/>

  </PreferenceCategory>

</PreferenceScreen>