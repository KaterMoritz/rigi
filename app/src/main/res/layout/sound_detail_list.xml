<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="170dp"
        android:layout_width="match_parent"
        android:layout_margin="10dp">

        <SeekBar
            android:id="@+id/volumeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:theme="@style/AppTheme.Button"
            android:hapticFeedbackEnabled="true"
            android:background="@drawable/ripple"
            android:progressDrawable="@drawable/seekbar_style"
            android:progress="50"
            android:minHeight="2dip"
            android:maxHeight="2dip"
            android:thumb="@drawable/custom_thumb"
            android:text="LautstÃ¤rke"
            android:max="100" />

        <Button
            android:id="@+id/favorites_btn"
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:theme="@style/AppTheme.Button"
            android:textSize="22sp"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            android:background="@drawable/ripple"
            android:text="Meine Favoriten"/>

        <Button
            android:id="@+id/all_btn"
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:theme="@style/AppTheme.Button"
            android:textSize="22sp"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            android:background="@drawable/ripple"
            android:text="Top 500 Stationen"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/stationlist"
        android:layout_marginTop="200dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <ProgressBar
        android:id="@+id/progressBar" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/colorYellow"
        android:indeterminate="true"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/infotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="15dp"
        android:text="Info"
        android:visibility="visible"
        android:textSize="22sp"/>

</RelativeLayout>

