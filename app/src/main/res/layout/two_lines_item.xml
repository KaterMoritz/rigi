<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="130dp"
    android:background="@drawable/round_border_gray"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="6dip"
        android:layout_marginLeft="20dip"
        android:contentDescription="TODO"
        android:src="@drawable/blowing_snow" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="135dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/icon"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="135dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@id/icon"
        android:maxLines="1"
        android:text="Description"
        android:layout_gravity="center_vertical"
        android:gravity="left"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/line2_center"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/line2"
        android:maxLines="1"
        android:text="Center"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:textSize="22sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/line2_right"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:maxLines="1"
        android:text="Right"
        android:gravity="right"
        android:textSize="22sp"
        android:visibility="invisible"
        android:layout_alignStart="@+id/icon1" />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="178dp"
        android:gravity="center"
        android:contentDescription="icon1"
        android:src="@drawable/ic_wb_sunny_black_24dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:contentDescription="icon1"
        android:src="@drawable/ic_brightness_3_black_24dp"
        android:visibility="invisible"/>


</RelativeLayout>