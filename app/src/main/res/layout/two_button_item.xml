<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="130dp"
    android:background="@drawable/round_border_gray"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="6dip"
        android:layout_marginLeft="20dip"
        android:contentDescription="TODO"
        android:src="@drawable/blowing_snow" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="135dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/icon"
        android:gravity="center_vertical"
        android:text="Modul"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/modul_info"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="135dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@id/icon"
        android:maxLines="1"
        android:text="Description"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/button1_info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="240dip"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:maxLines="1"
        android:text="Button1 Info"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="240dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:theme="@style/AppTheme.Button"
        android:textSize="22sp"
        android:clickable="true"
        android:background="@drawable/ripple"
        android:text="Button1"/>

    <Button
        android:id="@+id/button1_1"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="345dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:theme="@style/AppTheme.Button"
        android:textSize="22sp"
        android:clickable="true"
        android:background="@drawable/ripple"
        android:visibility="invisible"
        android:text="Button1_1"/>

    <Button
        android:id="@+id/button1_2"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="240dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:theme="@style/AppTheme.Button"
        android:textSize="22sp"
        android:clickable="true"
        android:background="@drawable/ripple"
        android:visibility="invisible"
        android:text="Button1_2"/>

    <TextView
        android:id="@+id/button2_info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dip"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:maxLines="1"
        android:text="Button2 Info"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="20dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:theme="@style/AppTheme.Button"
        android:textSize="22sp"
        android:clickable="true"
        android:background="@drawable/ripple"
        android:text="Button2"/>

    <Button
        android:id="@+id/button2_1"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="125dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:theme="@style/AppTheme.Button"
        android:textSize="22sp"
        android:clickable="true"
        android:background="@drawable/ripple"
        android:visibility="invisible"
        android:text="Button2_1"/>

    <Button
        android:id="@+id/button2_2"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="20dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:theme="@style/AppTheme.Button"
        android:textSize="22sp"
        android:clickable="true"
        android:background="@drawable/ripple"
        android:visibility="invisible"
        android:text="Button2_2"/>


</RelativeLayout>